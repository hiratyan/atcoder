{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "うんち",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++17",
                "-Wall",
                "-Wextra",
                "-O0",
                "-DONLINE_JUDGE",
                "-I/opt/boost/gcc/include",
                "-L/opt/boost/gcc/lib",
                "-I${workspaceFolder}/ac-library",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/problem.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "デバッガーによって生成されたタスク。"
        }
    ]
}